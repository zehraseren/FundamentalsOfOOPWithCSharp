@model List<Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">TAKIM ARKADAŞLARIMIZIN LİSTESİ</h4>
            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Ad Soyad</th>
                                <th>Görevi</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1"><img src="@item.Image" alt="image" /></td>
                                    <td>@item.TeamId</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.PersonTitle</td>
                                    <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>UYARI!</strong> Veri tabanında personel bulunanamıştır!
                    </div>
                    <div class="alert alert-warning">
                        <strong>UYARI!</strong> Lütfen personel girişi yapınız.
                    </div>
                }
                <br />
                <a href="/Team/AddTeam/" class="btn btn-outline-info">Yeni Personel Girişi</a>
            </div>
        </div>
    </div>
</div>
