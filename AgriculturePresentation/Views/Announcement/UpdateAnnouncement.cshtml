@model Announcement

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DUYURU DÜZENLEME SAYFASI</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementId)
                <div class="form-group">
                    <label for="">Duyuru Adı</label>
                    <input type="text" class="form-control" id="" asp-for="AnnouncementName">
                </div>
                <div class="form-group">
                    <label for="">Tarih</label>
                    <input type="date" class="form-control" id="" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="">Açıklama</label>
                    <textarea class="form-control" id="" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary me-2">Ekle</button>
                <a href="/Announcement/Index/" class="btn btn-outline-danger">Vazgeç</a>
            </form>
        </div>
    </div>
</div>