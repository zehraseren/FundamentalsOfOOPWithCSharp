@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DUYURU LİSTESİ</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Duyuru Adı</th>
                            <th>Tarihi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.AnnouncementName</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-success">Güncelle</a></td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <a href="/Announcement/ChangeToStatusFalse/@item.AnnouncementId" class="btn btn-outline-warning">Pasif Yap</a>

                                    }
                                    else
                                    {
                                        <a href="/Announcement/ChangeToStatusTrue/@item.AnnouncementId" class="btn btn-outline-secondary">Aktif Yap</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
            <br />
        </div>
    </div>
</div>