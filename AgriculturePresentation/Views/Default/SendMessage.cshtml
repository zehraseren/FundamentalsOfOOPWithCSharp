@model Contact

<div class="col-md-9 contact-middle">
    <h2>Bize Yazın</h2>
    @using (Html.BeginForm("SendMessage", "Default", FormMethod.Post))
    {
        <div class="form-agileinfo">
            <p>Adınız Soyadınız</p>
            <input type="text" asp-for="Name" placeholder="Adınız Soyadınız" required="" />
            <p>Mail Adresiniz</p>
            <input type="email" asp-for="Mail" placeholder="Mail Adresiniz" required="" />
        </div>
        <div class="form-agileits-w3layouts">
            <p>Mesajınız</p>
            <textarea asp-for="Message" placeholder="Mesajınız" required=""></textarea>
            <input type="submit" value="Mesajı Gönder">
        </div>
        <div class="clearfix"></div>
    }
</div>